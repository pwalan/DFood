<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.com.pwalan.dfood">

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".UserAcitvity"
            android:label="@string/title_activity_user_acitvity"></activity>
        <activity
            android:name=".UploadActivity"
            android:label="@string/title_activity_upload"></activity>
        <activity
            android:name=".utils.SelectPicActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".ShowConcernActivity"
            android:label="@string/title_activity_show_concern"></activity>
        <activity
            android:name=".ShowFavoritesActivity"
            android:label="@string/title_activity_show_favorites"></activity>
        <activity
            android:name=".ShowRecipeActivity"
            android:label="@string/title_activity_show_recipe"></activity>
        <activity
            android:name=".ShowPersonInf"
            android:label="@string/title_activity_show_person_inf"></activity>
        <activity
            android:name=".MakeCommentActivity"
            android:label="@string/title_activity_make_comment"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"></activity>
        <activity
            android:name=".UserUpdateDialog"
            android:label="@string/title_activity_user_update_dialog"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"></activity>
        <activity
            android:name=".ForgetPasswdActivity"
            android:label="@string/title_activity_forget_passwd"></activity>
        <activity
            android:name=".ChangePasswdActivity"
            android:label="@string/title_activity_change_passwd"></activity>
        <activity
            android:name=".ChangeHeadActivity"
            android:label="@string/title_activity_change_head"></activity>
        <activity
            android:name=".UpStepActivity"
            android:label="@string/title_activity_up_step"></activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"></activity>
        <activity
            android:name=".ShowMyUp"
            android:label="@string/title_activity_show_my_up"></activity>
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"></activity>
        <activity
            android:name=".ShareDialogActivity"
            android:label="@string/title_activity_share_dialog"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"></activity>

        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="1105530038" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />


    </application>

</manifest>
