<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_margin="10dp">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="春"
            android:background="@color/lightgreen"
            android:id="@+id/btn_spring" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="夏"
            android:background="@color/tianyi"
            android:id="@+id/btn_summer"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="秋"
            android:background="@color/lightgoldenyellow"
            android:id="@+id/btn_autumn"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="冬"
            android:background="@color/white"
            android:id="@+id/btn_winter"/>

    </LinearLayout>

    <ListView
        android:id="@+id/season_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll01"
        android:divider="#ffffff"
        android:dividerHeight="2dp">
    </ListView>


</RelativeLayout>