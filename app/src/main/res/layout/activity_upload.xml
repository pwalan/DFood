<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pwalan.androidtest.UserAcitvity">

    <include
        android:id="@+id/show_main_title"
        layout="@layout/title_layout" />

    <ScrollView
        android:layout_below="@id/show_main_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_recipe"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="#bbcccc"/>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_rname"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:hint="菜名"
                    android:textSize="24dp" />

                <Spinner
                    android:id="@+id/sp_season"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:entries="@array/season"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <EditText
                android:id="@+id/et_rcontent"
                android:layout_gravity="center_horizontal"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:hint="介绍"
                android:textSize="18dp"
                android:gravity="center" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/tianyi"
                android:gravity="center"
                android:padding="5dp"
                android:text="具体步骤"
                android:textSize="28dp" />

            <ListView
                android:id="@+id/step_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#ffffff"
                android:dividerHeight="2dp"
                android:padding="10dp" />

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="1dp"
        android:scaleType="center"
        android:background="#00ffffff"
        />

</RelativeLayout>
